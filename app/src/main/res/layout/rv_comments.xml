<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.adrian.mymvvmexample.jsonplaceholderlist.rv.comment.RVCommentsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:listItemLayout="@{viewModel.commentItemLayoutId}"
            app:listItems="@{viewModel.rvCommentItemViewModels}"
            app:variableId="@{viewModel.variableId}" />
        <!--app:onItemClickListener="@{viewModel}"-->
    </LinearLayout>

</layout>
