<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.adrian.mymvvmexample.jppost.view.PostsActivity">

    <data>

        <variable
            name="postsVM"
            type="com.example.adrian.mymvvmexample.jppost.viewmodel.PostsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:listItemLayout="@{postsVM.postItemLayoutId}"
            app:listItems="@{postsVM.postItemViewModels}"
            app:variableId="@{postsVM.variableId}" />

    </LinearLayout>

</layout>
