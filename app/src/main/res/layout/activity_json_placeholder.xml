<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.adrian.mymvvmexample.jsonplaceholder.view.JsonPlaceholderActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="JsonPlaceholder Api" />

        <Button
            android:id="@+id/btnOpenJsonPlaceholderList"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="JsonPlaceholder list"
            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/btnFindAllPost"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="posts"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btnFindAllComment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="comments"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnFindAllAlbum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="albums"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnFindAllPhoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="photos"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnFindAllTodo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="todos"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnFindAllUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="users"
        android:textAllCaps="false" />

</LinearLayout>