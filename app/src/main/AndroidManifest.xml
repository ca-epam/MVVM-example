<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adrian.mymvvmexample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.adrian.mymvvmexample.app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.adrian.mymvvmexample.login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.adrian.mymvvmexample.main.view.MainActivity" />
        <activity android:name="com.example.adrian.mymvvmexample.apteligent.view.ApteligentActivity" />
        <activity android:name="com.example.adrian.mymvvmexample.omdb.view.OmdbApiActivity" />
        <activity android:name="com.example.adrian.mymvvmexample.jsonplaceholder.view.JsonPlaceholderApiActivity" />
        <activity android:name="com.example.adrian.mymvvmexample.base.BaseActivity"></activity>
    </application>

</manifest>